<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8AC7DB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Passenger Info -->
        <EditText
            android:id="@+id/et_passenger_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Passenger Name"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Phone Number"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="phone" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Address"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Email"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress" />

        <!-- Number of Adults -->
        <EditText
            android:id="@+id/et_total_adults"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Total Number of Adults"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <!-- Number of Children -->
        <EditText
            android:id="@+id/et_total_children"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Total Number of Children"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <!-- Type of Travel -->
        <Spinner
            android:id="@+id/spinner_type_of_travel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Type of Travel" />

        <!-- Destination -->
        <EditText
            android:id="@+id/et_destination"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Destination"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="text" />

        <!-- Preferred Hotel -->
        <Spinner
            android:id="@+id/spinner_preferred_hotel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Preferred Hotel" />

        <!-- Number of Rooms -->

        <EditText
            android:id="@+id/et_number_of_rooms"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:hint="Number of Rooms"
            android:inputType="number"
            android:paddingLeft="20dp" />

        <!-- Size of Group -->
        <EditText
            android:id="@+id/et_size_of_group"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Size of Group"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:inputType="number" />

        <!-- Transportation to and from Hotel -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Transportation to and from Hotel" />
        <RadioGroup
            android:id="@+id/rg_transportation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_transportation_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/rb_transportation_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <!-- Trip Amount -->
        <EditText
            android:id="@+id/et_trip_amount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Trip Amount"
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"

            android:inputType="numberDecimal" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />



    </LinearLayout>
</ScrollView>
